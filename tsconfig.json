{
    "compilerOptions": {
      "target": "ESNext",
      "jsx": "react-jsx",
      "jsxImportSource": "hono/jsx",
      "lib": ["ESNext", "DOM", "DOM.Iterable"],
      "baseUrl": "./",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "paths": {
        "@/*": ["./src/*"],
        "@/db/*": ["./src/db/*"]
      },
      "typeRoots": ["./node_modules/@types"],
      "types": ["vite/client", "node"],
      "strict": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "sourceMap": true,
      "skipLibCheck": true
    },
    "tsc-alias": {
      "resolveFullPaths": true
    }
  }